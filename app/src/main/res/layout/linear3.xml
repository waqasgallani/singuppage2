<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- Icon 1 at the top left corner -->
    <ImageView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_backspace_24"
        android:layout_gravity="start"
        android:padding="16dp" />

    <!-- Icon 2 at the top right corner -->
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_heart_broken_24"
        android:layout_gravity="end"
        android:padding="16dp" />

    <!-- TextView in the top center -->
    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Picture with margin -->
    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/flower"
        android:layout_marginTop="70dp" />

    <!-- Text View on the left side -->
    <TextView
        android:id="@+id/left_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beautiful Rose"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp" />

    <!-- Text View on the left side -->
    <TextView
        android:id="@+id/left_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular price $195.00"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <!-- Icon, TextView, and Icon on the left side -->
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/left_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_24" />

        <TextView
            android:id="@+id/left_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" 1 "
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/left_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_minimize_24"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Rating icon on the right side -->
    <ImageView
        android:id="@+id/rating_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        android:layout_gravity="end" />

    <!-- Long TextView -->
    <TextView
        android:id="@+id/long_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is the best flower in the world whose fragrance attracts people so much that why people love to buy and smell its live fragrance "
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Buy button with green background -->
    <Button
        android:id="@+id/buy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</LinearLayout>
